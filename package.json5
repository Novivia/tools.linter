{
  "name": "@novivia/linter",
  "role": "linter",
  "version": "1.7.0",
  "engines": {
    "node": ">=4",
    "npm": ">=3",
  },
  "publishConfig": {
    "registry": "https://npm.novivia.com"
  },
  "description": "ESlint rules for Novivia",
  "authors": [
    "Mathieu M-Gosselin <mathieumg@novivia.com>",
    "MichaÃ«l Ferris <mike.ferrisb@gmail.com>",
  ],
  "license": "SEE LICENSE IN LICENSE.md",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@git.novivia.com/nov/tools.linter.git"
  },
  "bin": {
    "novivia-linter": "./cliWrapper",
  },
  "main": "index.js",
  "scripts": {
    "build": "novivia-builder build",
    "lint": "./cliWrapper lint .",
    "open-source": "open-source",
    "pub": "novivia-builder publish",
    "release": "novivia-builder release",
  },
  "novivia-builder": {
    "babelPatterns": [
      "cli.js",
      "modifiers/**/*.js",
    ],
    "packagePatterns": [
      "cliWrapper",
      "modifiers/**",
      "rules/**",
    ],
  },
  "novivia-linter": {
    "modifiers": {
      "global": {
        "react": false,
      },
    },
  },
  "devDependencies": {
    // Novivia dependencies.
    "@novivia/babel": "0.0.4",
    "@novivia/build-module": "^0.5.1",
    "@novivia/open-sourcer": "^0.1.1",
  },
  "dependencies": {
    // npm dependencies.
    "babel-eslint": "^7.1.0",
    "eslint": "^3.9.1",
    "eslint-myrules-manager": "^0.5.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-filenames": "^1.1.0",
    "eslint-plugin-flowtype": "^2.25.0",
    "eslint-plugin-header": "^0.1.0",
    "eslint-plugin-import": "^2.1.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-lean-imports": "^0.3.3",
    "eslint-plugin-lodash": "^2.1.7",
    "eslint-plugin-markdown": "^1.0.0-beta.3",
    "eslint-plugin-new-with-error": "^1.1.0",
    "eslint-plugin-node": "^3.0.3",
    "eslint-plugin-promise": "^3.3.1",
    "eslint-plugin-react": "6.5.0",
    "eslint-plugin-security": "^1.2.0",

    // FIXME: Reactivate when there are less false positives and when speed is
    // improved.
    // "eslint-plugin-spellcheck": "0.0.7",
    "eslint-plugin-you-dont-need-lodash-underscore": "^5.0.2",
  }
}
